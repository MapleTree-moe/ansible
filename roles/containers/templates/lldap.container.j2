[Unit]
Description=LLDAP container
Documentation=https://github.com/lldap/lldap
After=lldap-db.service
Requires=lldap-db.service

[Service]
Restart=on-failure

[Install]
WantedBy=multi-user.target default.target

[Container]
AutoUpdate=registry
ContainerName=lldap-db
Image=docker.io/lldap/lldap:stable
Network=lldap.network
Network=traefik.network

# environmental variables
Environment=TZ={{ ansible_date_time.tz }}
Environment=LLDAP_LDAP_BASE_DN=dc=mapletree,dc=moe
Environment=LLDAP_JWT_SECRET=REPLACE_WITH_RANDOM
Environment=LLDAP_KEY_SEED=REPLACE_WITH_RANDOM
Environment=LLDAP_DATABASE_URL=postgres://lldapuser:lldappass@lldap-db/lldap

# traefik configuration labels
Label=traefik.enable="true"
Label=traefik.http.routers.lldap.rule="Host(`lldap.{{ ansible_fqdn }}`)"
Label=traefik.http.routers.lldap.middlewares="securityHeaders"
Label=traefik.http.services.lldap.loadbalancer.server.port=17170

Volume=lldap.volume:/data:Z
